/dts-v1/;
#include <nordic/nrf52832_ciaa.dtsi>
#include "fanstel_bm832-pinctrl.dtsi"

/ {
	model = "Fanstel BM832 Board";
	compatible = "vendor,fanstel-bm832";

	chosen {
		zephyr,console = &uart0;
		zephyr,sram = &sram0;
		zephyr,flash = &flash0;
		zephyr,bt-mon-uart = &uart0;
		zephyr,bt_c2h_uart = &uart0;
		zephyr,bt-uart = &uart0;
	};
};

&gpio0 {
	status = "okay";
};

&uart0 {
	compatible = "nordic,nrf-uarte";
	status = "okay";

	current-speed = <115200>;
	pinctrl-0 = <&uart0_default>;
	pinctrl-1 = <&uart0_sleep>;
	pinctrl-names = "default", "sleep";
};

&flash0 {

	partitions {
		compatible = "fixed-partitions";
		#address-cells = <1>;
		#size-cells = <1>;

		boot_partition: partition@0 {
			label = "mcuboot";
			reg = <0x00000000 DT_SIZE_K(64)>;
		};
		slot0_partition: partition@10000 {
			label = "image-0";
			reg = <0x00010000 DT_SIZE_K(216)>;
		};
		slot1_partition: partition@80000 {
			label = "image-1";
			reg = <0x00046000 DT_SIZE_K(216)>;
		};
		scratch_partition: partition@f0000 {
			label = "image-scratch";
			reg = <0x0007c000 DT_SIZE_K(16)>;
		};
	};
};